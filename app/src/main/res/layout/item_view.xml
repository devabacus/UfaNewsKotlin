<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ImageView
            android:id="@+id/img_news"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content" android:layout_height="120dp"
            android:contentDescription="image"/>

    <TextView
            android:id="@+id/tv_title_news"
            tools:text="В Уфе открывается фотовыставка, посвященная Всемирному дню авиации и космонавтики"
            style="@style/title"
            app:layout_constraintStart_toEndOf="@id/img_news"
            app:layout_constraintTop_toTopOf="@id/img_news"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tv_desc_news"
            tools:text="УФА, 10 апр 2019. /ИА «Башинформ», Лейла Аралбаева/.В Национальном музее Республики Башкортостан открывается фотовыставка, посвященная Всемирному дню авиации и космонавтики."
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintStart_toStartOf="@id/tv_title_news"
            app:layout_constraintTop_toBottomOf="@id/tv_title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>